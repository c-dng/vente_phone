{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}

<div class="container">

    <h1 class="text-center mt-3">Orders</h1>

    <div class="d-flex justify-content-around">
    <a class="btn btn-primary" href="{{ path('app_commande_index', {'param' : 0} )}}"> Orders not delivered </a>
    <a class="btn btn-primary" href="{{ path('app_commande_index', {'param' : true} )}}"> Orders not delivered </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Date_com</th>
                <th>Total</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.nom }}</td>
                <td>{{ commande.adresse }}</td>
                <td>{{ commande.dateCom ? commande.dateCom|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.total }}</td>
                <td>{{ commande.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_commande_show', {'id': commande.id}) }}"><i class="far fa-eye"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}
