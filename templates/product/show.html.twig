{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

<a class="btn btn-light mt-2 ms-2" href="{{ path('app_product_index') }}"> <i class="fas fa-undo-alt"></i> Back to list </a>

<div class="container">

    <h1 class="text-center mt-3">Product</h1>

    <div class="row">
    
    </div>


    <div class="col-8">

    </div>

    <div class="col-4">
    
    </div>


    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ product.marque }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ product.ref }}</td>
            </tr>
            <tr>
                <th>Prix_unit</th>
                <td>{{ product.prixUnit }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                {# <td>{{ product.image }}</td>  #}
                <td><img src="{{ asset('images/' ~ product.image) }}" alt="" style="width:150px"></td>
            </tr>

            <tr>
                <td>Available: <span>{{ product.quantity }}</span></td>
            </tr>
        </tbody>
    </table>
    
        {% for pictur in product.picturs %}

            <div>
                {{ include('pictur/_delete_form.html.twig') }}
                <img src="{{ asset('images/' ~ pictur.image )}}" alt="" style="width: 200px;">
            </div>

        {% endfor %}

            <a class="btn btn-primary mb-2" href="{{ path('app_pictur_new', {'id' : product.id} )}}"> Ajouter une image au produit </a>
<div>


        <div class="d-flex">

            <a class="btn btn-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

            {{ include('product/_delete_form.html.twig') }}

        </div>

</div>


    <hr>




</div>

{% endblock %}