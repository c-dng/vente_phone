{% extends 'base.html.twig' %}

{% block title %}Detail produit{% endblock %}

{% block body %}



<div class="container mt-5">

    <div class="card ps-3 pt-3 pe-3 pb-3">
      <div class="card__title">
        <div class="icon">
          <a href="{{ path('app_home') }}"><i class="fa fa-arrow-left"></i></a>
        </div>
         <i class="fas fa-heart"> 
            <a href=""></a>
         </i>
      </div>


      {% for picture in product.getImage() %}
        <div><img src="{{ asset('images/' ~ product.image) }}" alt="" style="width:250px;"
